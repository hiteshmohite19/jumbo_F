<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgrey"
    tools:context=".Filters">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/tooltab"
        android:background="@drawable/gradient_background">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:id="@+id/toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Filters"
                            android:textSize="25dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="count"
                            android:textSize="20dp"
                            android:id="@+id/count"/>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/clear"
                        android:gravity="center"
                        android:text="Clear"
                        android:textSize="20dp"/>
                </RelativeLayout>
            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tooltab"
        android:id="@+id/lay1"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundcorner_grey"
            android:weightSum="2"
            android:layout_marginHorizontal="50dp"
            android:id="@+id/switchBar">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/from"
                android:padding="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/roundcorner_white"
                android:layout_margin="1dp"
                android:textSize="20dp"
                android:text="Del - Bom"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bom-Del"
                android:padding="10dp"
                android:gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:textSize="20dp"
                android:id="@+id/to"/>
        </LinearLayout>

        <com.google.android.material.slider.Slider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/switchBar"
            app:trackColorActive="@color/red"
            android:id="@+id/slider"
            app:thumbColor="@color/red" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/displayPrice"
            android:layout_below="@id/slider">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text=""
                android:id="@+id/minPrice"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text=""
                android:id="@+id/maxPrice"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lay2"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:background="@color/white"
        android:layout_below="@+id/lay1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/numberOfStops"
            android:textColor="@color/black"
            android:text="Number of Stops"
            android:textSize="17dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/numberOfStops"
            android:weightSum="3"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:id="@+id/zerostop"
                android:background="@drawable/roundcorner_grey"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:id="@+id/zero1"
                    android:textColor="@color/black"
                    android:textSize="19dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Non-stop"
                    android:id="@+id/zero2"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:id="@+id/onestop"
                android:background="@drawable/roundcorner_grey"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:id="@+id/oneo1"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:textSize="19dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Non-stop"
                    android:id="@+id/oneo2"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:id="@+id/twostop"
                android:background="@drawable/roundcorner_grey"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2+"
                    android:gravity="center"
                    android:id="@+id/two1"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:textSize="19dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Non-stop"
                    android:id="@+id/two2"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="15dp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lay3"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:background="@color/white"
        android:layout_below="@+id/lay2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sortDayNight"
            android:textColor="@color/black"
            android:text="Departure from LocationName"
            android:textSize="17dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sortDayNight"
            android:weightSum="4"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:id="@+id/btnDep1"
                android:background="@drawable/roundcorner_grey"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Before 6am"
                    android:gravity="center"
                    android:id="@+id/dep11"
                    android:layout_marginTop="5dp"
                    android:textSize="19dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Non-stop"
                    android:id="@+id/dep12"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:textSize="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:id="@+id/btnDep2"
                android:background="@drawable/roundcorner_grey"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6am to 12 mp"
                    android:gravity="center"
                    android:id="@+id/dep21"
                    android:layout_marginTop="5dp"
                    android:textSize="19dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Non-stop"
                    android:id="@+id/dep22"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:textSize="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:id="@+id/btnDep3"
                android:background="@drawable/roundcorner_grey"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12pm to 6pm"
                    android:gravity="center"
                    android:id="@+id/dep31"
                    android:layout_marginTop="5dp"
                    android:textSize="19dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Non-stop"
                    android:id="@+id/dep32"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:textSize="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:id="@+id/btnDep4"
                android:background="@drawable/roundcorner_grey"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="After 6pm"
                    android:id="@+id/dep41"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:textSize="19dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Non-stop"
                    android:id="@+id/dep42"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:textSize="15dp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay3"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_background"
            android:text="APPLY"
            android:id="@+id/apply"
            android:textColor="@color/white" />
    </RelativeLayout>

</RelativeLayout>